<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntryActivity">



    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:id="@+id/ll_1">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="搬运场景:"/>

        <RadioGroup
            android:id="@+id/rg_case"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_marginLeft="10dp"
                android:id="@+id/rb_case_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"/>
            <RadioButton
                android:layout_marginLeft="10dp"
                android:id="@+id/rb_case_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"/>
            <RadioButton
                android:layout_marginLeft="10dp"
                android:id="@+id/rb_case_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"/>
            <RadioButton
                android:layout_marginLeft="10dp"
                android:id="@+id/rb_case_3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3-1"/>
            <RadioButton
                android:layout_marginLeft="10dp"
                android:id="@+id/rb_case_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"/>
        </RadioGroup>

    </LinearLayout>



    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_2"
        android:layout_below="@id/ll_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="站点类型:"/>

        <RadioGroup
            android:id="@+id/rg_st_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_marginLeft="10dp"
                android:id="@+id/rb_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始站"/>
            <RadioButton
                android:layout_marginLeft="10dp"
                android:id="@+id/rb_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经停站"/>
            <RadioButton
                android:layout_marginLeft="10dp"
                android:id="@+id/rb_dest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="终点站"/>
        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="20dp"
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="站点名:"/>

        <EditText
            android:id="@+id/et_st_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="data"
            android:layout_marginTop="2dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:id="@+id/ll_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_3">




        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="航班号:"/>

        <EditText
            android:id="@+id/et_flight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text=""
            android:layout_marginTop="2dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_4">

        <Button
            android:id="@+id/btn_entry"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="进入场景"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>




</RelativeLayout>