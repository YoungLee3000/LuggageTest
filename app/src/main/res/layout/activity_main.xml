<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_exe_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="命令执行结果:"
            android:layout_weight="2"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/tv_run_result"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="20dp"
            />

    </LinearLayout>

    <View
        android:id="@+id/v_line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_below="@id/ll_exe_rel"/>


    <ScrollView
        android:id="@+id/sc_step"
        android:layout_below="@id/v_line1"
        android:layout_above="@id/v_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">







            <EditText
                android:id="@+id/ed_car_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="拖车号" />


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_start_service"
                    android:text="开启检测"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_end_service"
                    android:text="结束检测"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_new_car_ready"
                    android:text="开始搬第一个行李"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_new_car_done"
                    android:text="结束搬第一个行李"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>





        </LinearLayout>




    </ScrollView>

    <View
        android:id="@+id/v_line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_above="@id/tv_callback_tip"/>

    <TextView
        android:id="@+id/tv_callback_tip"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_rv"
        android:text="回调数据:"
        android:textSize="14dp"/>


    <LinearLayout
        android:id="@+id/ll_rv"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <include
            android:id="@+id/ic_header"
            layout="@layout/text_item"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_epc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>
        <View
            android:id="@+id/v_line_bottom"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

</RelativeLayout>